            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/textSupraIliaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_supraIliaca" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editSupraIliaca1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editSupraIliaca2"
